{
  "mcpServers": {
    "scryfall": {
      "command": "node",
      "args": ["/absolute/path/to/scryfall-mcp/dist/index.js"],
      "env": {
        "SCRYFALL_USER_AGENT": "ScryfallMCPServer/1.0 (your-email@domain.com)",
        "CACHE_TTL_HOURS": "24",
        "RATE_LIMIT_MS": "75",
        "LOG_LEVEL": "info"
      }
    }
  }
}
